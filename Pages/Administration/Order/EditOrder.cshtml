@page "EditOrder"
@model CS10_Project_Fisketorvet_V1.Pages.Administration.Order.EditOrderModel
@{
    ViewData["Title"] = "EditOrder";
}
<div class="container-fluid pt-3 row">
    <div class="col-6">
        <table class="table table-striped">
            @foreach (int[] p in EditOrderModel.Order.Items)
            {
                Models.Product product = Models.Product.GetProduct(p[0], Models.Product.ProductCatalog);
                  <tr>
                      <td>
                          @p[1] x 
                      </td>
                      <td>
                          @product.ImagePath
                      </td>
                      <td>
                          @product.ProductName
                      </td>
                      <td>
                          @product.ProductPrice kr
                      </td>
                  </tr>
            }
        </table>
    </div>
    <div class="col-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.ZIP" class="control-label">ZIP:</label>
                <input asp-for="@Model.ZIP" class="form-control" />
                <span asp-validation-for="@Model.ZIP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Street" class="control-label">Street:</label>
                <input asp-for="@Model.Street" class="form-control" />
                <span asp-validation-for="@Model.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.StreetNR" class="control-label">Street number:</label>
                <input asp-for="@Model.StreetNR" class="form-control" />
                <span asp-validation-for="@Model.StreetNR" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-dark" value="Save Changes" />
            </div>
        </form>
    </div>
</div>