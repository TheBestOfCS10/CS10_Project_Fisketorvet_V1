@page "CreateCustomer"
@model CS10_Project_Fisketorvet_V1.Pages.Customer.CreateCustomerModel
@{
    ViewData["Title"] = "Create Customer";
}


<div>
    <form method="post">
        <div class="form-group">
            <label class="control-label" asp-for="Customer.Name">Name:</label>
            <input class="form-control" type="text" asp-for="Customer.Name" />
            <span asp-validation-for="Customer.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="Customer.Email">Email:</label>
            <input class="form-control" type="email" asp-for="Customer.Email" />
            <span asp-validation-for="Customer.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="Customer.Password">Password:</label>
            <input class="form-control" type="text" asp-for="Customer.Password" />
            <span asp-validation-for="Customer.Password" class="text-danger"></span>
            <span asp-validation-for="Customer.ConfirmPassword" class="text-danger" hidden></span>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="Customer.ConfirmPassword">Password:</label>
            <input class="form-control" type="text" asp-for="Customer.ConfirmPassword" />
            <span asp-validation-for="Customer.Passwords" class="text-danger"></span>
        </div>
        <div class="form-group">
            <select asp-for="Customer.CustomerGender">
                <option>Select your gender...</option>
                <option asp-route-gender="@Models.Customer.Gender.Male">Male</option>
                <option asp-route-gender="@Models.Customer.Gender.Female">Female</option>
            </select>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Create account" />
        </div>
    </form>
</div>
