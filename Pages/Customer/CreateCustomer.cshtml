@page "CreateCustomer"
@model CS10_Project_Fisketorvet_V1.Pages.Customer.CreateCustomerModel
@{
    ViewData["Title"] = "Create Customer";
}


<div>
    <form method="post">
        <div class="form-group">
            <label class="control-label" asp-for="Customer.FirstName">First Name:</label>
            <input class="form-control" type="text" asp-for="Customer.FirstName" />
            <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="Customer.LastName">Last Name:</label>
            <input class="form-control" type="text" asp-for="Customer.LastName" />
            <span asp-validation-for="Customer.LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="Customer.Email">Email:</label>
            <input class="form-control" type="email" asp-for="Customer.Email" />
            <span asp-validation-for="Customer.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="@Model.Password1">Password:</label>
            <input class="form-control" type="text" asp-for="@Model.Password1" />
            <span asp-validation-for="@Model.Password1" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="@Model.Password2">Confirm Password:</label>
            <input class="form-control" type="text" asp-for="@Model.Password2" />
            <span asp-validation-for="@Model.Password2" class="text-danger"></span>
            @{ if (CreateCustomerModel.InvalidPasswords)
                    {
            <span class="text-danger">The passwords do not match</span>
                    }
             }
        </div>
        <div class="form-group">
            <select asp-for="Customer.CustomerGender" required>
                <option disabled selected>Select your gender...</option>
                <option asp-route-gender="@Models.Customer.Gender.Male">Male</option>
                <option asp-route-gender="@Models.Customer.Gender.Female">Female</option>
            </select>
        </div>
        <div class="row">
            <div class="form-group col-6">
                <input type="submit" class="btn btn-primary" value="Sign Up" />
            </div>
        </div>
    </form>
</div>
