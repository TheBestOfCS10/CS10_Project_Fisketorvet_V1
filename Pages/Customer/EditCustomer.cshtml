@page "EditCustomer"
@model CS10_Project_Fisketorvet_V1.Pages.Customer.EditCustomerModel
@{
    ViewData["Title"] = "EditCustomer";
}

<div class="container-fluid pt-3">
    <div class="row">
        <div class="col-2">
            <img src="" class="img-fluid" alt="Profile Picture" />
        </div>
        <div class="col-7">
            <form method="post">
                <div class="form-group">
                    <label asp-for="@Model.FirstName" class="control-label">First name:</label>
                    <input asp-for="@Model.FirstName" class="form-control" />
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.LastName" class="control-label">Last Name:</label>
                    <input asp-for="@Model.LastName" class="form-control" />
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <select asp-for="CustomerGender" required>
                        <option disabled selected>Select your gender...</option>
                        <option asp-route-gender="@Models.Customer.Gender.Male">Male</option>
                        <option asp-route-gender="@Models.Customer.Gender.Female">Female</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-dark" value="Save Changes" />
                </div>
            </form>
        </div>
        <div class="col-3">
            <div>
                @{
                    if (LoggedInUser.CurrentUser.HasBankAccount)
                    {
                        <a class="btn btn-outline-dark" asp-page="/Payment/RemoveBankAccount">Remove your bank account</a>
                        <p></p>
                        ;
                    }
                    else
                    {
                        <a class="btn btn-dark" asp-page="/Payment/AddBankAccount" asp-route-returnpage="/LoggedInUser/UserProfile">Add a bank account</a>
                        <p></p>
                        ;
                    }
                    <a class="btn btn-danger" asp-page="/Customer/DeleteCustomer" asp-route-id="@LoggedInUser.CurrentUser.User[0]">Delete Account</a>
                    <p></p>
                }
            </div>
        </div>
    </div>
</div>
