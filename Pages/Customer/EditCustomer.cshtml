@page "EditCustomer"
@model CS10_Project_Fisketorvet_V1.Pages.Customer.EditCustomerModel
@{
    ViewData["Title"] = "EditCustomer";
}

<div class="container-fluid pt-3">
    <div class="row">
        <div class="col-3">
            <img src="" class="img-fluid" alt="Profile Picture" />
        </div>
        <div class="col-9">
            <form method="post">
                <div class="form-group">
                    <label asp-for="@Model.FirstName" class="control-label"></label>
                    <input asp-for="@Model.FirstName" class="form-control" />
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.LastName" class="control-label"></label>
                    <input asp-for="@Model.LastName" class="form-control" />
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <select asp-for="CustomerGender" required>
                        <option disabled selected>Select your gender...</option>
                        <option asp-route-gender="@Models.Customer.Gender.Male">Male</option>
                        <option asp-route-gender="@Models.Customer.Gender.Female">Female</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Save Changes" />
                </div>
            </form>
        </div>
    </div>
</div>
