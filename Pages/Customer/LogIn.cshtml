@page "LogIn"
@model CS10_Project_Fisketorvet_V1.Pages.Customer.LogInModel
@{
    ViewData["Title"] = "Log In";
   
}

<div>
    <form method="post">
        <div class="form-group">
            <label class="control-label" asp-for="CurrentUser[0]">Email:</label>
            <input class="form-control" type="email" asp-for="CurrentUser[0]" />
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="CurrentUser[1]">Password:</label>
            <input class="form-control" type="text" asp-for="CurrentUser[1]" />
            <span asp-validation-for="CurrentUser" class="text-danger"></span>
        </div>
        <div class="form-check">
            <input asp-for="RemainLoggedIn" type="checkbox" id="checkbox"/>
            <label for="checkbox">Remember me</label>
        </div>
        <div class="row">
            <div class="col-6">
                <input type="submit" value="Log in" class="btn btn-primary" />
            </div>
            <div class="col-6">
                <a asp-page="CreateCustomer" class="btn btn-outline-primary">Sign up</a>
            </div>
        </div>
    </form>
</div>
