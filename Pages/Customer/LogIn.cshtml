@page "LogIn"
@model CS10_Project_Fisketorvet_V1.Pages.Customer.LogInModel
@{
    ViewData["Title"] = "Log In";
}

<div>
    <form method="post">
         <div class="form-group">
             <label class="control-label" asp-for="Customer.Email">Password:</label>
            <input class="form-control" type="text" asp-for="Customer.Email" />
            <span asp-validation-for="Customer.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="Customer.Password">Password:</label>
            <input class="form-control" type="email" asp-for="Customer.Password" />
            <span asp-validation-for="Customer.Password" class="text-danger"></span>
        </div>
        <div>
            <input type="submit" value="Log in" class="btn btn-primary" />
        </div>
    </form>
</div>
