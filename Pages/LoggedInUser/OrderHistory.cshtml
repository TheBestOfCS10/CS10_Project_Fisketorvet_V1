@page "OrderHistory"
@model CS10_Project_Fisketorvet_V1.Pages.LoggedInUser.OrderHistoryModel
@{
    ViewData["Title"] = "OrderHistory";
}
<div>
    Your order history is as follows:
    <table class="table table-striped table-hover">
        @foreach(Models.Order o in Models.Order.Catalog.Values)
        {
            if(o.OwnerID == CurrentUser.User[0])
            {
                <tr>
                    <td style="word-wrap: normal">@OrderHistoryModel.ListProducts(o)</td>
                    <td>@o.Date.ToString("HH:mm dd/MM/yyyy")</td>
                    <td>@o.Price kr</td>
                </tr>
            }
        }
    </table>
</div>
