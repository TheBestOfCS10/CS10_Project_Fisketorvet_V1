@page "UserProfile"
@model CS10_Project_Fisketorvet_V1.Pages.LoggedInUser.UserProfileModel
@{
    ViewData["Title"] = "UserProfile";
}
<a class="btn btn-primary" asp-page="/Customer/EditCustomer" asp-route-id="@LoggedInUser.CurrentUser.User[0]">Edit Profile</a>
<p></p>
<a class="btn btn-primary" asp-page="/Customer/DeleteCustomer" asp-route-id="@LoggedInUser.CurrentUser.User[0]">Delete Account</a>
<p></p>
<div>
    @{
        if (LoggedInUser.CurrentUser.HasBankAccount)
        {
            <a class="btn btn-primary" asp-page="/Payment/RemoveBankAccount">Remove your bank account</a>
            <p></p>
            ;
        }
        else
        {
            <a class="btn btn-primary" asp-page="/Payment/AddBankAccount" asp-route-returnpage="/LoggedInUser/UserProfile">Add a bank account</a>
            <p></p>
            ;
        }
    }
</div>
<a class="btn btn-primary" asp-page="/LoggedInUser/LogOut">Log Out</a>