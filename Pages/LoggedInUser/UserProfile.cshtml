@page "UserProfile"
@model CS10_Project_Fisketorvet_V1.Pages.LoggedInUser.UserProfileModel
@{
    ViewData["Title"] = "UserProfile";
}

<div class="container">
    <div class="row">
        <div class="col-3">
            <img src="" alt="ProfilePicture">
        </div>
        <div class="col-8">
            @{Models.Customer user = Models.Customer.Search(LoggedInUser.CurrentUser.User[0]);}
            <div class="row">
                <table class="table table-borderless">
                    <tbody>
                        <tr>
                            <td>@user.FirstName @user.LastName</td>
                        </tr>
                        @{
                            if (LoggedInUser.CurrentUser.User[1] == 1)
                            {
                                <tr>
                                    <td>
                                        @Models.Admin.Search(LoggedInUser.CurrentUser.User[0]).Access
                                    </td>
                                </tr>
                            }
                        }
                        <tr>
                            <td>@user.CustomerGender</td>
                        </tr>
                        <tr>
                            @{
                                if (LoggedInUser.CurrentUser.HasBankAccount)
                                {
                                    <td>You have linked a bank account</td>
                                }
                                else
                                {
                                    <td>You don't have a linked bank account</td>
                                }
                            }
                            </tr>
                        </tbody>
                </table>
            </div>
            
        </div>
        <div class="col-1">
            <a class="btn btn-dark" asp-page="OrderHistory">My orders</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <a class="btn btn-dark" asp-page="/Customer/EditCustomer" asp-route-id="@LoggedInUser.CurrentUser.User[0]">Edit Profile</a>
            <p></p>
            <a class="btn btn-outline-dark" asp-page="/LoggedInUser/LogOut">Log Out</a>
        </div>
    </div>
</div>

